<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/BotNavBarHeight"
    android:paddingBottom="@dimen/BotNavBarHeight"
    android:layout_margin="40dp"
    tools:context=".ui.guide.GuideFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recom_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:text="Рекомендации"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        app:backgroundTint="@color/almost_white"
        app:cornerRadius="16dp"
        app:elevation="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/map_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:text="Карта ресурсов"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        app:backgroundTint="@color/almost_white"
        app:cornerRadius="16dp"
        app:elevation="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recom_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/proftests_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:text="Профтесты"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textFontWeight="400"
        app:backgroundTint="@color/almost_white"
        app:cornerRadius="16dp"
        app:elevation="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profprobs_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:text="Профпробы"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textFontWeight="400"
        app:backgroundTint="@color/almost_white"
        app:cornerRadius="16dp"
        app:elevation="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proftests_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>